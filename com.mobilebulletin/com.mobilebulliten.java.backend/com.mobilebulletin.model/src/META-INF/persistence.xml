<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="com.mobilebulletin.model"   transaction-type="JTA">
	<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>java:/XAMobileBulletinDS</jta-data-source>
		<non-jta-data-source>java:/NONMobileBulletinDS</non-jta-data-source>
		<mapping-file>META-INF/orm_common_type.xml</mapping-file>
		<mapping-file>META-INF/orm_common_log.xml</mapping-file>
		<mapping-file>META-INF/orm_common_communication.xml</mapping-file>
		<mapping-file>META-INF/orm_common_cms.xml</mapping-file>	
		<mapping-file>META-INF/orm_company.xml</mapping-file>
		<mapping-file>META-INF/orm_group.xml</mapping-file>
		<mapping-file>META-INF/orm_department.xml</mapping-file>	
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(foreignKeys=true, SchemaAction='add')"/>
			<!-- <property name="openjpa.Log" value="DefaultLevel=Trace, Runtime=TRACE"/>-->
			<property name="openjpa.Log" value="none"/>
			<property name="openjpa.RetryClassRegistration" value="true"/>
		</properties>
	</persistence-unit>
</persistence>