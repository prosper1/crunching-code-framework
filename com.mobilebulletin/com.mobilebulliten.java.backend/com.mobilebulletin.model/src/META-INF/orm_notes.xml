<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">

	<entity class="com.common.notes.AdditionalNotes">
		<table schema="NOTEDB" name="ADDITIONAL_NOTES" />
		<attributes>
			<id name="id">
			<generated-value strategy="SEQUENCE" generator="seq_add_notes"/>
				<sequence-generator allocation-size="1" initial-value="1" name="seq_add_notes" sequence-name="seq_add_notes"></sequence-generator>
			</id>
			<basic name="notes"></basic>	
			<one-to-one name="logActivity" target-entity="com.common.log.LogActivity" fetch="EAGER" >
				<cascade>
					<cascade-all/>
				</cascade>
			</one-to-one>
		</attributes>
	</entity>
</entity-mappings>
